{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es2017",
        "jsx": "preserve",
        "reactNamespace": "h",
        "lib": [
            "es2017",
            "dom"
        ],
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "declaration": false
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}
